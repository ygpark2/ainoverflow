<%= form_for question, method: :post, html: { class: "form-horizontal", role: "form" } do |f| %>
  <div class="form-group">
    <%= f.label :title, :class=>"col-sm-1 control-label" %>
    <div class="col-sm-11">
      <%= f.text_field :title, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body, :class=>"col-sm-1 control-label" %>
    <div class="col-sm-11">
      <%= f.text_area :body, :class=>"form-control", :size=>"78x24" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tag_list, "Tags", :class=>"col-sm-1 control-label" %>
    <div class="col-sm-11">
      <%= f.text_field :tag_list, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= button_tag "Submit", :class => "btn btn-default pull-right" %>
    </div>
  </div>
<% end %>
